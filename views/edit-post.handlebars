<article>
  <h2 class="title">Edit Post</h2>
  <hr>

  <form class="edit-post-form">
    <div>
      <p for="post-title">Post title:</p>
      <input class="title-input" name="post-title" type="text" value="{{post.title}}"/>
    </div>
    <div>
      <p for="post-text">Post content:</p>
      <input class="post-textarea" name="post-text" type="text" value="{{post.post_text}}" />
    </div>
    <button class="upvote-btn edit-post-btn">Edit post</button>
    <button class="upvote-btn delete-post-btn">Delete post</button>
    <hr>
    created by you on {{format_date post.created_at}}
    |
    <a href="/post/{{post.id}}">{{post.comments.length}} {{format_plural "comment" post.comments.length}}</a>
    </div>
  </form>
</article>

{{> comments post.comments}}

<script src="/javascript/edit-post.js"></script>
<script src="/javascript/delete-post.js"></script>
<script src="/javascript/comment.js"></script>