<article class="post">
  <div class="title">    
    <p>{{title}}</p>
  </div>
  <div class="meta">
    <p>{{post_text}}</p>
    <div class="count">
    {{vote_count}} {{format_plural "point" vote_count}} | 
    {{user.username}} | {{format_date created_at}} | 
    <a href="/post/{{id}}">{{comments.length}} {{format_plural "comment" comments.length}}</a>
    
    </div>
  </div>